        <label for="content">Nội dung</label>
        <textarea class="form-control" id="content">
          </textarea>
      </div>

      <button type="submit" class="btn btn-primary">Gửi </button>
    </form>
  </section>
  <script>
    function searchCatalogChange(option) {
      if (option.value == "author") {
        document.getElementById("tukhoatimkiem").innerHTML =
          "<option>Tên tác giả</option> <option>Năm sinh tác giả</option>"
      } else if (option.value == "book") {
        document.getElementById("tukhoatimkiem").innerHTML =
          "<option>Tên sách</option> <option>Thể loại sách</option> <option>Năm xuất bản</option>"
      } else {
        document.getElementById("tukhoatimkiem").innerHTML =
          "<option>Tên tài khoản</option> <option>Tên người dùng</option> <option>Mã số</option>"
      }
    };
    $(function () {
      // Sidebar toggle behavior
      $("#sidebarCollapse").on("click", function () {
        $("#sidebar, #content").toggleClass("active");
      });
    });

    function searchFunction() {
      let url = "/admin/";
      let search = "search=";
      let type = "type=";
      var keys = tukhoatimkiem.value;


      if (danhmuctimkiem.value == "account") {
        url += "account-management?";
        if (keys == "Tên tài khoản")
          type += "userName";
        else if (keys == "Tên người dùng")
          type += "name";
        else
          type += "personalID"
      }
      else if (danhmuctimkiem.value == "book") {
        url += "book-management?";
        type += "bookName";
      }
      else {
        url += "author-management?";
      }
      search += $('#searchInput').val();

      url += search + "&" + type;
      location.href = url;
    }
  </script>
