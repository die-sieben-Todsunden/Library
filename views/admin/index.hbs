  <section class="quickSearch">
    <hr>

    <h4>Tìm kiếm nhanh thông tin</h4>

    <div class="row">
      <div class="form-group col-lg-4 col-md-4">
        <label for="danhmuctimkiem">Danh mục tìm kiếm</label>
        <select class="form-control" id="danhmuctimkiem" onchange="searchCatalogChange(this)">
          <option value="account">Tài khoản</option>
          <option value="book">Sách</option>
          <option value="author">Tác giả</option>
        </select>
      </div>
      <div class="form-group col-lg-4 col-md-4">
        <label for="tukhoatimkiem">Từ khóa tìm kiếm</label>
        <select class="form-control" id="tukhoatimkiem">
          <option>Tên tài khoản</option>
          <option>Tên người dùng</option>
          <option>Mã số</option>
        </select>
      </div>
    </div>

    <div class="searchBanner">
      <div class="input-group mb-3">
        <input class="form-control" placeholder="Nhập để tìm kiếm" id="searchInput">
        <div class="input-group-append">
          <button class="btn btn-outline-primary" type="button" onclick="searchFunction()">
            <i class="fa fa-search"></i>
          </button>
        </div>
      </div>
    </div>
  </section>
