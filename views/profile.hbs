<link rel="stylesheet" href="/public/css/user_profile.css">
<div class="container-fluid" id="body">
  {{#if message}}
    <div class="form-group alert {{type}}">
      <strong>{{message}}</strong>
    </div>
  {{/if}}  
  <div class="row" id="body-content">
    <div class="col-md-3 justify-content-center" id="body-content-left">
      <img src="/public/img/avatar.jpeg" width='190' height='270'>
      <button class="btn" type="button" data-toggle="collapse" data-target="#body-content-right">Edit Profile</button>
    </div>
    <div class="col-md-4" id="body-content-center">
      <div class="row" id="uinfo-name">
        <h6>- Tên: </h6>
        <p>{{user.name}}</p>
      </div>
      <div class="row" id="uinfo-id">
        <h6>- ID:</h6>
        <p>{{user.personalID}}</p>
      </div>
      <div class="row" id="uinfo-age">
        <h6>- Ngày sinh:</h6>
        <p>{{user.birth}}</p>
      </div>
      <div class="row" id="uinfo-falcuty">
        <h6>- Khoa:</h6>
        <p>Công nghệ thông tin</p>
      </div>
      <div class="row" id="uinfo-birth">
        <h6>- Địa chỉ:</h6>
        <p> {{user.address}}</p>
      </div>
      <div class="row" id="uinfo-email">
        <h6>- Email:</h6>
        <p>{{user.email}}</p>
      </div>
      <div class="row" id="uinfo-phone">
        <h6>- Số điện thoại: </h6>
        <p> {{user.phone}}</p>
      </div>
    </div>
    <div class="col-md-4 collapse" id="body-content-right">
      <div class="card card-body">
        <form action="/user/profile" method="POST">
        <div class="form-group ">
          <input type="text" name="name"style="height: 40px;" id="name" class="form-control validate" placeholder="Họ và tên">
        </div>
        <div class="form-group ">
          <input type="text" name="id" style="height: 40px;"id="id" class="form-control validate" placeholder="ID Sinh viên">
        </div>
        <div class="form-group ">
          <input type="date" name="dob" style="height: 40px;"id="dob" class="form-control validate" placeholder="Ngày sinh">
        </div>
        <div class="row" id="uinfo-falcuty">
          <h6>Khoa:</h6>
          <p>Công nghệ thông tin</p>
        </div>
        <div class="form-group ">
          <input type="text" name="address" style="height: 40px;" id="address" class="form-control validate" placeholder="Địa chỉ">
        </div>
        <div class="row" id="uinfo-email">
          <h6>Email:</h6>
          <p>{{user.email}}</p>
        </div>
        <div class="form-group ">
          <input type="text" name="phone" style="height: 40px;"id="phone" class="form-control validate" placeholder="Số điện thoại">
        </div>
        <div class="row">
          <div class="col-5">
          </div>
          <div class="col-2"></div>
          <div class="col-5">
            <button type="submit " value="Submit" class="btn btn-primary " style="float: right;">Done</button>
          </div>
        </div>
        </form>
      </div>
    </div>
  </div>
</div>
<div id="includedFooter"></div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>