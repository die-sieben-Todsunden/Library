<div class="container-fluid" id="header">
  <div class="row" style="position: relative;">
    <h1 style="margin-left: 20px;margin-right: 0;font-size: 60px;">THƯ VIỆN</h1>
    <!--<h5 style="margin-top: 5px; margin-left: 15px">Đại học Khoa học tự nhiên<br>Khoa Công nghệ
            thông tin
        </h5> -->
    <div></div>
    {{#if isLoggedIn}}
    <div style="position: absolute; right: 0; z-index: 1;">
      <div class="usericon">
        <div>
          <div class="btn " style="position: relative; background-color: white;" data-toggle="dropdown">
            <i class="fa fa-envelope-o" style="font-size: 48px;" aria-hidden="true"></i>
            <span class="badge badge-primary noti-badge"
              style="position: absolute; top: 10px;right: 10px; background-color: red; border-radius: 10px;"></span>
          </div>
          <div class="dropdown-menu noti">
            {{#each new}}
            <a class="dropdown-item" href="">{{content}}</a>
            {{/each}}

            {{#each new2}}
            <a class="dropdown-item" href="">{{content}}</a>
            {{/each}}
          </div>
        </div>
        <a href="/user/profile"><img src="/public/img/avatar-icon.png" width='64' alt=""></a>
        <div>
          <button type="button" class="btn btn-primary dropdown-toggle"
            style="border-radius: 50px; height: 48px; background-color: #5AB4F4; border-style: none;margin-top: 10px;"
            data-toggle="dropdown">{{username}}</button>
          <div id="dropdown" class="dropdown-menu" style="padding:0px 0px;">
            <a class="dropdown-item" href="/user/profile">Thông tin tài khoản</a>
            <a class="dropdown-item" href="/user/books">Quản lý sách</a>
            <hr style="margin: 1px;">
            <a class="dropdown-item" href="/user/logout">Đăng xuất</a>
          </div>
        </div>
      </div>
    </div>
    {{else}}
    <div class="Logbutton" style=" position: absolute; right: 0; z-index: 1;">
      <a href="/user/signUp">Đăng kí</a>
      <a href="/user/login">Đăng nhập</a>
    </div>
    {{/if}}
  </div>
  {{#unless isAdmin}}
  <div class="row">
    <nav class="col-12 navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Trang chủ<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/book">Tìm kiếm</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user/schedule">Hẹn lịch</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">Về thư viện</a>
          </li>
        </ul>
      </div>

    </nav>
  </div>
  {{/unless}}
</div>


<script>
  $(".noti-badge").prepend($(".noti a").length);
</script>